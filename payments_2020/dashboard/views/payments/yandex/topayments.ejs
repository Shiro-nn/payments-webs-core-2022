<script>
    var isFramed = false;
    try {
      isFramed = window != window.top || document != top.document || self.location != top.location;
    } catch (e) {
      isFramed = true;
    }
    if (isFramed) {
        window.location.href = '/payments/<%= id %>/widget';
    }
    if (!isFramed) {
        window.location.href = '/payments/<%= id %>';
    }
</script>