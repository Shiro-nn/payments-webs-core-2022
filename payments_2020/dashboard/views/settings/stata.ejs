        <style>
            ::-webkit-scrollbar {
            width: 9px;
            }
            ::-webkit-scrollbar-thumb {
            background-color: #18191c;
            border-radius: 99px;
            }
            ::-webkit-scrollbar-track {
            background-color: #00ffff52;
            }
            * {
                cursor: url(/cursors/cyan/standart.cur), auto !important;
            }
            .btn, a, a * {
                cursor: url(/cursors/cyan/pointer.cur), pointer !important;
            }
            p, h4 {
                cursor: url(/cursors/cyan/select.cur), pointer !important;
            }
            ::-moz-selection { 
            color: cyan;
            background: #00000020;
            border-radius: 15px;
            }
            ::selection {
            color: cyan;
            background: #00000020;
            }
            a[class="text-dark"]
            {
                cursor: url(/cursors/cyan/select.cur), pointer !important;
            }
            #badge {
              position: absolute;
              right: 10px;
              top: 0px;
              background-color: #00ffff71;
              -webkit-transform: rotate(+45deg) scale(1) skew(0deg) translate(10px);
              -moz-transform: rotate(+45deg) scale(1) skew(0deg) translate(10px);
              -o-transform: rotate(+45deg) scale(1) skew(0deg) translate(10px);
              -ms-transform: rotate(+45deg) scale(1) skew(0deg) translate(10px);
              transform: rotate(+45deg) scale(1) skew(0deg) translate(10px);
              text-align: center;
              color: #232a35;
              padding: 0 0.0em;
              border-top: 0px;
              line-height: 20px;
              margin: 0;
            }
            #badge:after {
              content: ' ';
              position: absolute;
              right: -20px;
              top: 0px;
              border-right: 20px solid transparent;
              border-bottom: 20px solid #00ffff71;
            }
            #badge:before {
              content: ' ';
              position: absolute;
              left: -20px;
              top: 0;
              border-left: 20px solid transparent;
              border-bottom: 20px solid #00ffff71;
            }
        </style>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>
